# Source our bashrc if it exists
 [[ -f ~/.bashrc ]] && source ~/.bashrc
# Case-Insensitive Auto Completion
 bind "set completion-ignore-case on" 
# >>> Install Custom dotfiles >>>
 source /home/cole/.config/.dotfiles/bash/.profile/functions.sh	# Custom functions
 source /home/cole/.config/.dotfiles/bash/.profile/prompt.sh	# Custom prompt
 source /home/cole/.config/.dotfiles/bash/.profile/ssh_login.sh	# Custom ssh_login
# <<< Install Custom dotfiles <<<